{
  "family": "monitoria-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "monitoria-backend",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.eu-north-1.amazonaws.com/monitoria-backend:latest",
      "portMappings": [
        {
          "containerPort": 5001,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "FLASK_APP",
          "value": "app.py"
        },
        {
          "name": "FLASK_ENV",
          "value": "production"
        },
        {
          "name": "JWT_SECRET_KEY",
          "value": "${JWT_SECRET_KEY}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/monitoria-backend",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
} 